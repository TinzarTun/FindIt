<!-- Form Section -->
<section class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden"
    >
      <!-- Header -->
      <div
        class="px-6 sm:px-8 py-6 border-b border-gray-100 bg-gradient-to-r from-red-50 to-red-100"
      >
        <div class="flex items-center">
          <div
            class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center mr-4"
          >
            <i data-lucide="search-x" class="h-6 w-6 text-white"></i>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Post Lost Item</h1>
            <p class="text-gray-600 mt-1">
              Help others help you find your lost item
            </p>
          </div>
        </div>
      </div>

      <!-- Form -->
      <form
        action="/lost/create"
        method="POST"
        enctype="multipart/form-data"
        id="lostItemForm"
        class="px-6 sm:px-8 py-8 space-y-8"
      >
        <!-- Basic Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="info" class="h-5 w-5 mr-2 text-primary-600"></i>
            Basic Information
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Item Title *</label
              >
              <input
                type="text"
                name="title"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                placeholder="e.g., iPhone 14 Pro, Car Keys, Wallet"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Category *</label
              >
              <select
                name="categoryId"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              >
                <option value="">Select a category</option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Description *</label
            >
            <textarea
              name="description"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              placeholder="Provide detailed description including color, size, brand, distinctive features, etc."
            ></textarea>
          </div>
        </div>

        <!-- Location & Date -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="map-pin" class="h-5 w-5 mr-2 text-primary-600"></i>
            Location & Date
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Lost Location *</label
              >
              <input
                type="text"
                name="lostLocation"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                placeholder="e.g., Sule Pagoda, Downtown Yangon"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Date Lost *</label
              >
              <input
                type="date"
                id="lostDate"
                name="lostDate"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Additional Location Details</label
            >
            <textarea
              name="locationDetails"
              rows="2"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              placeholder="Provide more specific details about where you lost the item"
            ></textarea>
          </div>
        </div>

        <!-- Images -->
        <div class="mb-8 pb-8 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-6">Images</h3>
          <div class="space-y-4">
            <div>
              <input
                type="file"
                id="images"
                name="images"
                accept="image/*"
                multiple
                class="hidden"
              />
              <label
                for="images"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-colors"
              >
                <i class="fas fa-camera mr-2"></i>
                Add Photos
              </label>
              <p class="mt-2 text-xs text-gray-500">
                Upload photos of the item (JPG, PNG, GIF. Max 5MB each, up to 5
                photos)
              </p>
            </div>

            <!-- Image Preview Container -->
            <div id="imagePreviewContainer" class="hidden">
              <div
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4"
                id="imagePreviewGrid"
              >
                <!-- Image previews will be inserted here -->
              </div>
            </div>

            <div id="uploadStatus" class="text-xs hidden">
              <span id="uploadSuccess" class="text-green-600 hidden">
                <i class="fas fa-check mr-1"></i>Images uploaded successfully
              </span>
              <span id="uploadError" class="text-red-600 hidden">
                <i class="fas fa-times mr-1"></i>Some images failed to upload
              </span>
            </div>
          </div>
        </div>

        <!-- Reward & Options -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i
              data-lucide="dollar-sign"
              class="h-5 w-5 mr-2 text-primary-600"
            ></i>
            Reward & Options
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Reward Amount (Optional)</label
              >
              <div class="relative">
                <span class="absolute left-3 top-3 text-gray-500">$</span>
                <input
                  type="number"
                  name="reward"
                  min="0"
                  step="0.01"
                  class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                  placeholder="0.00"
                />
              </div>
              <p class="text-sm text-gray-500 mt-1">
                Offering a reward can increase chances of recovery
              </p>
            </div>
            <div class="space-y-4">
              <div class="flex items-center">
                <input
                  type="checkbox"
                  name="featured"
                  id="featured"
                  class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded"
                />
                <label for="featured" class="ml-2 text-sm text-gray-700">
                  Make this post featured (+$5 fee)
                </label>
              </div>
              <p class="text-sm text-gray-500">
                Featured posts get more visibility and appear at the top of
                search results
              </p>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="phone" class="h-5 w-5 mr-2 text-primary-600"></i>
            Contact Information
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start">
              <i
                data-lucide="info"
                class="h-5 w-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0"
              ></i>
              <div>
                <h4 class="text-sm font-semibold text-blue-900 mb-1">
                  Contact Information
                </h4>
                <p class="text-sm text-blue-800">
                  Your contact information from your profile will be used. You
                  can update it in your
                  <a href="profile.html" class="underline">profile settings</a>.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms and Submit -->
        <div class="space-y-6">
          <div class="flex items-start space-x-3">
            <input
              type="checkbox"
              name="terms"
              id="terms"
              required
              class="mt-1 h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded"
            />
            <label for="terms" class="text-sm text-gray-700">
              I agree to the
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Terms of Service</a
              >
              and
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Privacy Policy</a
              >. I confirm that all information provided is accurate and I am
              the rightful owner of this item.
            </label>
          </div>
          <div
            class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200"
          >
            <button
              type="button"
              onclick="cancelForm()"
              class="flex-1 bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors font-medium"
            >
              <i data-lucide="x" class="h-4 w-4 mr-2 inline"></i>
              Cancel
            </button>
            <button
              type="submit"
              class="flex-1 bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-3 rounded-lg hover:from-red-700 hover:to-red-800 hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-medium"
            >
              <span id="submitButtonSpinner" class="hidden">
                <i class="fas fa-spinner fa-spin mr-2"></i>
              </span>
              <span id="submitButtonText">Post Lost Item</span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- JavaScript -->
<script>
  // Initialize Lucide icons
  lucide.createIcons();

  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("lostItemForm");
    const imagesInput = document.getElementById("images");
    const imagePreviewContainer = document.getElementById(
      "imagePreviewContainer"
    );
    const imagePreviewGrid = document.getElementById("imagePreviewGrid");
    const uploadStatus = document.getElementById("uploadStatus");
    const uploadSuccess = document.getElementById("uploadSuccess");
    const uploadError = document.getElementById("uploadError");
    const submitButton = form.querySelector('button[type="submit"]');
    const submitButtonText = document.getElementById("submitButtonText");
    const submitButtonSpinner = document.getElementById("submitButtonSpinner");

    let selectedFiles = [];
    const maxFiles = 5;
    const maxFileSize = 5 * 1024 * 1024; // 5MB

    // Set max date to today
    document.getElementById("lostDate").max = new Date()
      .toISOString()
      .split("T")[0];

    // Handle file selection
    imagesInput.addEventListener("change", function (e) {
      const files = Array.from(e.target.files);

      if (selectedFiles.length + files.length > maxFiles) {
        alert(`You can only upload up to ${maxFiles} images.`);
        return;
      }

      files.forEach((file) => {
        if (file.size > maxFileSize) {
          alert(`File "${file.name}" is too large. Maximum size is 5MB.`);
          return;
        }

        if (!file.type.startsWith("image/")) {
          alert(`File "${file.name}" is not an image.`);
          return;
        }

        selectedFiles.push(file);
        addImagePreview(file);
      });

      updateImagePreviewVisibility();
      // Clear the input so the same file can be selected again if needed
      imagesInput.value = "";
    });

    // Add image preview
    function addImagePreview(file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        const imageDiv = document.createElement("div");
        imageDiv.className = "relative group";
        imageDiv.innerHTML = `
            <img src="${e.target.result}" alt="Preview" class="w-full h-24 object-cover rounded-lg border border-gray-200">
            <button type="button" class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 text-white rounded-full text-xs hover:bg-red-600 transition-colors opacity-0 group-hover:opacity-100" onclick="removeImage(this, '${file.name}')">
              <i class="fas fa-times"></i>
            </button>
            <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 rounded-b-lg truncate">
              ${file.name}
            </div>
          `;
        imagePreviewGrid.appendChild(imageDiv);
      };
      reader.readAsDataURL(file);
    }

    // Remove image
    window.removeImage = function (button, fileName) {
      selectedFiles = selectedFiles.filter((file) => file.name !== fileName);
      button.parentElement.remove();
      updateImagePreviewVisibility();
    };

    // Update image preview visibility
    function updateImagePreviewVisibility() {
      if (selectedFiles.length > 0) {
        imagePreviewContainer.classList.remove("hidden");
      } else {
        imagePreviewContainer.classList.add("hidden");
      }
    }

    // Cancel form function
    window.cancelForm = function () {
      if (
        confirm(
          "Are you sure you want to cancel? All entered data will be lost."
        )
      ) {
        // Reset form
        form.reset();
        selectedFiles = [];
        imagePreviewGrid.innerHTML = "";
        updateImagePreviewVisibility();

        // Clear any saved draft
        localStorage.removeItem("lostItemDraft");

        // Redirect to home or previous page
        window.location.href = "/";
      }
    };

    // Form submission
    form.addEventListener("submit", function (e) {
      e.preventDefault();

      // Validate required fields
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      if (
        !data.title ||
        !data.categoryId ||
        !data.description ||
        !data.lostLocation ||
        !data.lostDate
      ) {
        alert("Please fill in all required fields.");
        return;
      }

      // Show loading state
      submitButton.disabled = true;
      submitButtonText.textContent = "Submitting...";
      submitButtonSpinner.classList.remove("hidden");

      // Simulate API call
      setTimeout(() => {
        // Reset button state
        submitButton.disabled = false;
        submitButtonText.textContent = "Post Lost Item";
        submitButtonSpinner.classList.add("hidden");

        alert(
          "Lost item posted successfully! We'll notify you if someone finds a matching item."
        );

        // Clear any saved draft
        localStorage.removeItem("lostItemDraft");

        // Reset form
        form.reset();
        selectedFiles = [];
        imagePreviewGrid.innerHTML = "";
        updateImagePreviewVisibility();
      }, 2000);
    });

    // Mobile menu toggle
    document
      .getElementById("mobileMenuButton")
      ?.addEventListener("click", function () {
        console.log("Mobile menu clicked");
      });
  });
</script>
