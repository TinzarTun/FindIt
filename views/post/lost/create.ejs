<!-- Form Section -->
<section class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden"
    >
      <!-- Header -->
      <div
        class="px-6 sm:px-8 py-6 border-b border-gray-100 bg-gradient-to-r from-red-50 to-red-100"
      >
        <div class="flex items-center">
          <div
            class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center mr-4"
          >
            <i data-lucide="search-x" class="h-6 w-6 text-white"></i>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Post Lost Item</h1>
            <p class="text-gray-600 mt-1">
              Help others help you find your lost item
            </p>
          </div>
        </div>
      </div>

      <!-- Form -->
      <form
        action="/lost/create"
        method="POST"
        enctype="multipart/form-data"
        id="lostItemForm"
        class="px-6 sm:px-8 py-8 space-y-8"
      >
        <!-- Basic Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="info" class="h-5 w-5 mr-2 text-primary-600"></i>
            Basic Information
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Item Title <span class="text-red-500">*</span></label
              >
              <input
                type="text"
                name="itemTitle"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                placeholder="e.g., Car Keys, Wallet, Phone"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Category <span class="text-red-500">*</span></label
              >
              <select
                name="categoryId"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              >
                <option value="" disabled selected hidden>
                  Select a category
                </option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Description <span class="text-red-500">*</span></label
            >
            <textarea
              name="description"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              placeholder="Provide detailed description including color, size, brand, distinctive features, etc."
            ></textarea>
          </div>
        </div>

        <!-- Location & Date -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="map-pin" class="h-5 w-5 mr-2 text-primary-600"></i>
            Location & Date
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Lost Location <span class="text-red-500">*</span></label
              >
              <select
                name="lostLocation"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              >
                <option value="" disabled selected hidden>
                  Select a location
                </option>
                <option value="Downtown Yangon">Downtown Yangon</option>
                <option value="North Yangon">North Yangon</option>
                <option value="South Yangon">South Yangon</option>
                <option value="East Yangon">East Yangon</option>
                <option value="West Yangon">West Yangon</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Date Lost <span class="text-red-500">*</span></label
              >
              <input
                type="date"
                id="lostDate"
                name="lostDate"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Additional Location Details</label
            >
            <textarea
              name="locationDetails"
              rows="2"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
              placeholder="Provide more specific details about where you lost the item"
            ></textarea>
          </div>
        </div>

        <!-- Images -->
        <div class="mb-8 pb-8 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-6">Images</h3>
          <div class="space-y-4">
            <div>
              <input
                type="file"
                id="images"
                name="images"
                accept="image/*"
                multiple
                class="hidden"
              />
              <label
                for="images"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-colors"
              >
                <i class="fas fa-camera mr-2"></i>
                Add Photos
              </label>
              <p id="imagesCount" class="mt-2 text-xs text-gray-500">
                No photos selected
              </p>
              <p class="mt-2 text-xs text-gray-500">
                Upload photos of the item (JPG, PNG, GIF. Max 5MB each, up to 5
                photos)
              </p>
            </div>
          </div>
        </div>

        <!-- Reward & Options -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="wallet" class="h-5 w-5 mr-2 text-primary-600"></i>
            Reward & Options
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Reward Amount (Optional)</label
              >
              <div class="relative">
                <input
                  type="number"
                  name="reward"
                  min="0"
                  step="1"
                  class="w-full pl-4 pr-14 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                  placeholder="000"
                />
                <span class="absolute right-3 top-3 text-gray-500">MMK</span>
              </div>
              <p class="text-sm text-gray-500 mt-1">
                Offering a reward can increase chances of recovery
              </p>
            </div>
            <div class="space-y-4">
              <div class="flex items-center">
                <input
                  type="checkbox"
                  name="featured"
                  id="featured"
                  class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded"
                />
                <label for="featured" class="ml-2 text-sm text-gray-700">
                  Make this post featured
                  <span class="font-semibold">(+MMK 5,000 fee)</span>
                </label>
              </div>
              <p class="text-sm text-gray-500">
                Featured posts get more visibility and appear at the top of
                search results
              </p>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="phone" class="h-5 w-5 mr-2 text-primary-600"></i>
            Contact Information
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start">
              <i
                data-lucide="info"
                class="h-5 w-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0"
              ></i>
              <div>
                <h4 class="text-sm font-semibold text-blue-900 mb-1">
                  Contact Information
                </h4>
                <p class="text-sm text-blue-800">
                  Your contact information from your profile will be used. You
                  can update it in your
                  <a href="/user/profile" class="underline">profile settings</a
                  >.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms and Submit -->
        <div class="space-y-6">
          <div class="flex items-start space-x-3">
            <input
              type="checkbox"
              name="terms"
              id="terms"
              required
              class="mt-1 h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded"
            />
            <label for="terms" class="text-sm text-gray-700">
              I agree to the
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Terms of Service</a
              >
              and
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Privacy Policy</a
              >. I confirm that all information provided is accurate and I am
              the rightful owner of this item.
            </label>
          </div>
          <div
            class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200"
          >
            <button
              type="button"
              onclick="window.location.href = '/post'"
              class="flex-1 bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="submitBtn"
              class="flex-1 bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-3 rounded-lg hover:from-red-700 hover:to-red-800 hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-medium"
            >
              Post Lost Item
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
  document.getElementById("images").addEventListener("change", function () {
    const maxFiles = 5;
    const files = this.files;
    const imagesCount = document.getElementById("imagesCount");

    if (files.length === 0) {
      imagesCount.textContent = "No photos selected";
    } else if (files.length > maxFiles) {
      alert(`You can only upload up to ${maxFiles} images.`);
      this.value = ""; // reset the input so user can select again
      imagesCount.textContent = "No photos selected";
    } else if (files.length === 1) {
      imagesCount.textContent = "1 photo selected";
    } else {
      imagesCount.textContent = `${files.length} photos selected`;
    }
  });
</script>
