<!-- Form Section -->
<section class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden"
    >
      <!-- Header -->
      <div
        class="px-6 sm:px-8 py-6 border-b border-gray-100 bg-gradient-to-r from-green-50 to-green-100"
      >
        <div class="flex items-center">
          <div
            class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4"
          >
            <i data-lucide="search-check" class="h-6 w-6 text-white"></i>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Post Found Item</h1>
            <p class="text-gray-600 mt-1">
              Help reunite someone with their lost item
            </p>
          </div>
        </div>
      </div>

      <!-- Form -->
      <form
        action="/found/create"
        method="POST"
        enctype="multipart/form-data"
        id="foundItemForm"
        class="px-6 sm:px-8 py-8 space-y-8"
      >
        <!-- Basic Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="info" class="h-5 w-5 mr-2 text-primary-600"></i>
            Basic Information
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Item Title <span class="text-red-500">*</span></label
              >
              <input
                type="text"
                name="itemTitle"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                placeholder="e.g., Car Keys, Wallet, Phone"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Category <span class="text-red-500">*</span></label
              >
              <select
                name="categoryId"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              >
                <option value="" disabled selected hidden>
                  Select a category
                </option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Description <span class="text-red-500">*</span></label
            >
            <textarea
              name="description"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              placeholder="Provide detailed description including color, size, brand, distinctive features, etc. Be specific but don't reveal all details for verification purposes."
            ></textarea>
            <p class="text-sm text-gray-500 mt-1">
              <i data-lucide="shield" class="h-3 w-3 inline mr-1"></i>
              Tip: Keep some details private for verification when the owner
              claims the item
            </p>
          </div>
        </div>

        <!-- Location & Date -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="map-pin" class="h-5 w-5 mr-2 text-primary-600"></i>
            Location & Date
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Found Location <span class="text-red-500">*</span></label
              >
              <select
                name="foundLocation"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              >
                <option value="" disabled selected hidden>
                  Select a location
                </option>
                <option value="Downtown Yangon">Downtown Yangon</option>
                <option value="North Yangon">North Yangon</option>
                <option value="South Yangon">South Yangon</option>
                <option value="East Yangon">East Yangon</option>
                <option value="West Yangon">West Yangon</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Date Found <span class="text-red-500">*</span></label
              >
              <input
                type="date"
                id="foundDate"
                name="foundDate"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Additional Location Details</label
            >
            <textarea
              name="locationDetails"
              rows="2"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              placeholder="Provide more specific details about where you found the item"
            ></textarea>
          </div>
        </div>

        <!-- Images -->
        <div class="mb-8 pb-8 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-6">Images</h3>
          <div class="space-y-4">
            <div>
              <input
                type="file"
                id="images"
                name="images"
                accept="image/*"
                multiple
                class="hidden"
              />
              <label
                for="images"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-colors"
              >
                <i class="fas fa-camera mr-2"></i>
                Add Photos
              </label>
              <p id="imagesCount" class="mt-2 text-xs text-gray-500">
                No photos selected
              </p>
              <p class="mt-2 text-xs text-gray-500">
                Upload photos of the item (JPG, PNG, GIF. Max 5MB each, up to 5
                photos)
              </p>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex items-start">
                <i
                  data-lucide="alert-triangle"
                  class="h-5 w-5 text-yellow-600 mt-0.5 mr-3 flex-shrink-0"
                ></i>
                <div>
                  <h4 class="text-sm font-semibold text-yellow-900 mb-1">
                    Privacy Tip
                  </h4>
                  <p class="text-sm text-yellow-800">
                    Consider hiding or blurring sensitive information in photos
                    (serial numbers, personal details) until the rightful owner
                    is verified.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Item Condition & Status -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="settings" class="h-5 w-5 mr-2 text-primary-600"></i>
            Condition & Status
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Condition <span class="text-red-500">*</span></label
              >
              <select
                name="condition"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              >
                <!-- For items -->
                <optgroup label="Item Condition">
                  <option value="Excellent">Excellent</option>
                  <option value="Good">Good</option>
                  <option value="Fair">Fair</option>
                  <option value="Poor">Poor</option>
                  <option value="Damaged">Damaged</option>
                </optgroup>

                <!-- For pets (health status) -->
                <optgroup label="Health Condition">
                  <option value="Healthy">Healthy</option>
                  <option value="Injured">Injured</option>
                  <option value="Sick">Sick</option>
                  <option value="Malnourished">Malnourished</option>
                  <option value="Deceased">Deceased</option>
                </optgroup>
              </select>
            </div>
          </div>
        </div>

        <!-- Verification Questions -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i
              data-lucide="shield-check"
              class="h-5 w-5 mr-2 text-primary-600"
            ></i>
            Verification Questions
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start">
              <i
                data-lucide="info"
                class="h-5 w-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0"
              ></i>
              <div>
                <h4 class="text-sm font-semibold text-blue-900 mb-1">
                  Verification Questions
                </h4>
                <p class="text-sm text-blue-800 mb-3">
                  Set up questions that only the true owner would know. This
                  helps verify legitimate claims.
                </p>
              </div>
            </div>
          </div>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Verification Question 1
                <span class="text-red-500">*</span></label
              >
              <input
                type="text"
                name="questionOne"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                placeholder="e.g., What brand is this item?"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Verification Question 2 (Optional)</label
              >
              <input
                type="text"
                name="questionTwo"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                placeholder="e.g., What distinctive feature does this item have?"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Verification Question 3 (Optional)</label
              >
              <input
                type="text"
                name="questionThree"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                placeholder="e.g., Where was this item purchased?"
              />
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i data-lucide="phone" class="h-5 w-5 mr-2 text-primary-600"></i>
            Contact Information
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start">
              <i
                data-lucide="info"
                class="h-5 w-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0"
              ></i>
              <div>
                <h4 class="text-sm font-semibold text-blue-900 mb-1">
                  Contact Information
                </h4>
                <p class="text-sm text-blue-800">
                  Your contact information from your profile will be used. You
                  can update it in your
                  <a href="/user/profile" class="underline">profile settings</a
                  >.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms and Submit -->
        <div class="space-y-6">
          <div class="flex items-start space-x-3">
            <input
              type="checkbox"
              name="terms"
              id="terms"
              required
              class="mt-1 h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
            />
            <label for="terms" class="text-sm text-gray-700">
              I agree to the
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Terms of Service</a
              >
              and
              <a
                href="#"
                class="text-primary-600 hover:text-primary-700 underline"
                >Privacy Policy</a
              >. I confirm that I found this item and will handle it responsibly
              until claimed by the rightful owner.
            </label>
          </div>
          <div class="flex items-start space-x-3">
            <input
              type="checkbox"
              name="safetyAgreement"
              id="safetyAgreement"
              required
              class="mt-1 h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
            />
            <label for="safetyAgreement" class="text-sm text-gray-700">
              I understand the safety guidelines and will only meet claimants in
              public places during daylight hours.
            </label>
          </div>
          <div
            class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200"
          >
            <button
              type="button"
              onclick="window.location.href = '/post'"
              class="flex-1 bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="submitBtn"
              class="flex-1 bg-gradient-to-r from-green-600 to-green-700 text-white px-6 py-3 rounded-lg hover:from-green-700 hover:to-green-800 hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-medium"
            >
              Post Lost Item
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- JavaScript -->
<script>
  document.getElementById("images").addEventListener("change", function () {
    const maxFiles = 5;
    const files = this.files;
    const imagesCount = document.getElementById("imagesCount");

    if (files.length === 0) {
      imagesCount.textContent = "No photos selected";
    } else if (files.length > maxFiles) {
      alert(`You can only upload up to ${maxFiles} images.`);
      this.value = ""; // reset the input so user can select again
      imagesCount.textContent = "No photos selected";
    } else if (files.length === 1) {
      imagesCount.textContent = "1 photo selected";
    } else {
      imagesCount.textContent = `${files.length} photos selected`;
    }
  });
</script>
