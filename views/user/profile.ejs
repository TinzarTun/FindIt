<!-- Hero Section -->
<section class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-fade-in"
    >
      <div class="px-6 sm:px-8 py-8">
        <!-- Hero Content -->
        <div
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between"
        >
          <div
            class="flex flex-col sm:flex-row items-center sm:items-center space-y-4 sm:space-y-0 sm:space-x-6 mb-4 sm:mb-0"
          >
            <!-- Avatar with Camera Icon -->
            <div class="relative group">
              <% if (user.avatar) { %>
              <img
                id="profileImage"
                src="/avatar/<%= user.avatar %>?height=120&width=120"
                alt="Profile Avatar"
                class="w-24 h-24 sm:w-32 sm:h-32 rounded-full object-cover border-4 border-white shadow-lg bg-gray-100"
              />
              <% } else { %>
              <img
                id="profileImage"
                src="https://cdn-icons-png.flaticon.com/512/847/847969.png?height=120&width=120"
                alt="Profile Avatar"
                class="w-24 h-24 sm:w-32 sm:h-32 rounded-full object-cover border-4 border-white shadow-lg bg-gray-100"
              />
              <% } %>
            </div>
            <!-- User Info -->
            <div class="text-center sm:text-left">
              <h1
                class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900"
              >
                <%= user.name %>
              </h1>
              <p class="text-base sm:text-lg text-gray-600">
                <%= user.email %>
              </p>
              <div
                class="flex flex-wrap items-center justify-center sm:justify-start gap-2 mt-2"
              >
                <% if (user.verified === true ) { %>
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  <i data-lucide="check-circle" class="h-3 w-3 mr-1"></i>
                  Verified
                </span>
                <% } else { %>
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"
                >
                  <i data-lucide="hourglass" class="h-3 w-3 mr-1"></i>
                  Pending
                </span>
                <% } %>
                <span class="text-sm text-gray-500 flex items-center">
                  <i data-lucide="calendar" class="h-3 w-3 mr-1"></i>
                  Member since <%= formattedDate %>
                </span>
              </div>
            </div>
          </div>
          <!-- Edit Button -->
          <div>
            <a
              href="/user/edit/<%= user.id %>"
              class="block sm:inline sm:mx-0 mx-auto bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-2.5 rounded-xl hover:from-primary-700 hover:to-primary-800 hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-medium"
            >
              <i data-lucide="edit-3" class="h-4 w-4 mr-2 inline"></i>
              Edit Profile
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Profile Content -->
<section class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Grid -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="xl:col-span-2 space-y-8">
        <!-- Personal Information -->
        <div
          class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-slide-in-left"
        >
          <div class="px-6 sm:px-8 py-6 border-b border-gray-100 bg-gray-50">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
              <i data-lucide="user" class="h-5 w-5 mr-2 text-primary-600"></i>
              Personal Information
            </h3>
          </div>
          <div class="px-6 sm:px-8 py-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Full Name</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.name %>
                </p>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Email Address</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.email %>
                </p>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Phone Number</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= formattedPhone %>
                </p>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Country</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.country %>
                </p>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Region/State</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.region || "-" %>
                </p>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >City</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.city || "-" %>
                </p>
              </div>
              <div class="sm:col-span-2 space-y-2">
                <label class="block text-sm font-semibold text-gray-700"
                  >Address</label
                >
                <p class="text-gray-900 bg-gray-50 px-4 py-3 rounded-lg">
                  <%= user.address || "-" %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div
          class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-slide-in-left"
        >
          <div class="px-6 sm:px-8 py-6 border-b border-gray-100 bg-gray-50">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
              <i
                data-lucide="activity"
                class="h-5 w-5 mr-2 text-primary-600"
              ></i>
              Recent Activity
            </h3>
          </div>
          <div class="px-6 sm:px-8 py-8">
            <div class="space-y-4">
              <div class="flex items-start space-x-4 p-4 bg-blue-50 rounded-xl">
                <div
                  class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <i
                    data-lucide="search-check"
                    class="h-4 w-4 text-blue-600"
                  ></i>
                </div>
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">
                    Posted a found item
                  </p>
                  <p class="text-sm text-gray-600">
                    iPhone 14 Pro found at Central Park
                  </p>
                  <p class="text-xs text-gray-500 mt-1">2 hours ago</p>
                </div>
              </div>
              <div
                class="flex items-start space-x-4 p-4 bg-green-50 rounded-xl"
              >
                <div
                  class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <i
                    data-lucide="check-circle"
                    class="h-4 w-4 text-green-600"
                  ></i>
                </div>
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">
                    Item successfully returned
                  </p>
                  <p class="text-sm text-gray-600">
                    Your wallet was returned to its owner
                  </p>
                  <p class="text-xs text-gray-500 mt-1">1 day ago</p>
                </div>
              </div>
              <div
                class="flex items-start space-x-4 p-4 bg-purple-50 rounded-xl"
              >
                <div
                  class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <i
                    data-lucide="file-text"
                    class="h-4 w-4 text-purple-600"
                  ></i>
                </div>
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">
                    New claim received
                  </p>
                  <p class="text-sm text-gray-600">
                    Someone claimed your found MacBook
                  </p>
                  <p class="text-xs text-gray-500 mt-1">3 days ago</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Statistics -->
        <div
          class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-slide-in-right"
        >
          <div class="px-6 py-6 border-b border-gray-100 bg-gray-50">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
              <i
                data-lucide="bar-chart-3"
                class="h-5 w-5 mr-2 text-primary-600"
              ></i>
              Statistics
            </h3>
          </div>
          <div class="px-6 py-8">
            <div class="space-y-6">
              <div
                class="flex items-center justify-between p-4 bg-red-50 rounded-xl"
              >
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center"
                  >
                    <i data-lucide="search-x" class="h-5 w-5 text-red-600"></i>
                  </div>
                  <span class="text-sm font-medium text-gray-700"
                    >Lost Items</span
                  >
                </div>
                <span class="text-2xl font-bold text-gray-900">5</span>
              </div>
              <div
                class="flex items-center justify-between p-4 bg-green-50 rounded-xl"
              >
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center"
                  >
                    <i
                      data-lucide="search-check"
                      class="h-5 w-5 text-green-600"
                    ></i>
                  </div>
                  <span class="text-sm font-medium text-gray-700"
                    >Found Items</span
                  >
                </div>
                <span class="text-2xl font-bold text-gray-900">12</span>
              </div>
              <div
                class="flex items-center justify-between p-4 bg-blue-50 rounded-xl"
              >
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center"
                  >
                    <i
                      data-lucide="file-text"
                      class="h-5 w-5 text-blue-600"
                    ></i>
                  </div>
                  <span class="text-sm font-medium text-gray-700"
                    >Claims Made</span
                  >
                </div>
                <span class="text-2xl font-bold text-gray-900">8</span>
              </div>
              <div
                class="flex items-center justify-between p-4 bg-purple-50 rounded-xl"
              >
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center"
                  >
                    <i
                      data-lucide="check-circle"
                      class="h-5 w-5 text-purple-600"
                    ></i>
                  </div>
                  <span class="text-sm font-medium text-gray-700">Returns</span>
                </div>
                <span class="text-2xl font-bold text-gray-900">15</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Account Status -->
        <div
          class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-slide-in-right"
        >
          <div class="px-6 py-6 border-b border-gray-100 bg-gray-50">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
              <i
                data-lucide="shield-check"
                class="h-5 w-5 mr-2 text-primary-600"
              ></i>
              Account Status
            </h3>
          </div>
          <div class="px-6 py-8">
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700"
                  >Email Verified</span
                >
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  <i data-lucide="check" class="h-3 w-3 mr-1"></i>
                  Yes
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700"
                  >Phone Verified</span
                >
                <% if (formattedPhone && formattedPhone !== "-") { %>
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  <i data-lucide="check" class="h-3 w-3 mr-1"></i>
                  Yes
                </span>
                <% } else { %>
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800"
                >
                  <i data-lucide="x" class="h-3 w-3 mr-1"></i>
                  No
                </span>
                <% } %>
              </div>
              <div class="pt-2">
                <div class="flex items-center justify-between text-sm mb-2">
                  <span class="text-gray-600">Profile Completion</span>
                  <span class="font-medium text-gray-900"
                    ><%= progress %>%</span
                  >
                </div>

                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div
                    class="h-3 bg-gradient-to-r rounded-full transition-all duration-500 ease-in-out animate-pulse-slow from-blue-400 to-blue-500 w-[<%= progress %>%]"
                  ></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div
          class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden animate-slide-in-right"
        >
          <div class="px-6 py-6 border-b border-gray-100 bg-gray-50">
            <h3 class="text-xl font-bold text-gray-900 flex items-center">
              <i data-lucide="zap" class="h-5 w-5 mr-2 text-primary-600"></i>
              Quick Actions
            </h3>
          </div>
          <div class="px-6 py-8">
            <div class="space-y-3">
              <button
                onclick="window.location.href='history.html'"
                class="w-full flex items-center justify-center px-4 py-3 bg-primary-50 text-primary-700 rounded-xl hover:bg-primary-100 transition-colors font-medium"
              >
                <i data-lucide="history" class="h-4 w-4 mr-2"></i>
                View History
              </button>
              <button
                onclick="openPasswordModal()"
                class="w-full flex items-center justify-center px-4 py-3 bg-gray-50 text-gray-700 rounded-xl hover:bg-gray-100 transition-colors font-medium"
              >
                <i data-lucide="key" class="h-4 w-4 mr-2"></i>
                Update Password
              </button>
              <button
                onclick="confirmLogout()"
                class="w-full flex items-center justify-center px-4 py-3 bg-yellow-50 text-yellow-700 rounded-xl hover:bg-yellow-100 transition-colors font-medium"
              >
                <i data-lucide="log-out" class="h-4 w-4 mr-2"></i>
                Logout
              </button>
              <button
                onclick="confirmDeleteAccount()"
                class="w-full flex items-center justify-center px-4 py-3 bg-red-50 text-red-700 rounded-xl hover:bg-red-100 transition-colors font-medium"
              >
                <i data-lucide="trash-2" class="h-4 w-4 mr-2"></i>
                Delete Account
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
