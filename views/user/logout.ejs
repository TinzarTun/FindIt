<div class="pt-16 min-h-screen flex items-center justify-center py-8">
  <div class="max-w-md w-full mx-4">
    <!-- Logout Confirmation Card -->
    <div
      class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden animate-fade-in"
    >
      <div class="px-6 py-8 text-center">
        <!-- Icon -->
        <div
          class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-6 animate-pulse-slow"
        >
          <i data-lucide="log-out" class="h-10 w-10 text-yellow-600"></i>
        </div>

        <!-- Title and Message -->
        <h1 class="text-2xl font-bold text-gray-900 mb-3">Confirm Logout</h1>
        <p class="text-gray-600 mb-8">
          Are you sure you want to logout from your account? You'll need to sign
          in again to access your profile and items.
        </p>

        <!-- User Info -->
        <div class="bg-gray-50 rounded-lg p-4 mb-6">
          <div class="flex items-center justify-center space-x-3">
            <% if (user.avatar) { %>
            <img
              id="profileImage"
              src="/uploads/avatar/<%= user.avatar %>?height=40&width=40"
              alt="Profile Avatar"
              class="w-10 h-10 rounded-full border-2 border-white shadow-sm"
            />
            <% } else { %>
            <img
              id="profileImage"
              src="https://cdn-icons-png.flaticon.com/512/847/847969.png?height=40&width=40"
              alt="Profile Avatar"
              class="w-10 h-10 rounded-full border-2 border-white shadow-sm"
            />
            <% } %>
            <div class="text-left">
              <p class="font-semibold text-gray-900"><%= user.name %></p>
              <p class="text-sm text-gray-600">
                <% if (user.email && user.phone) { %> <%= user.email %> <% }
                else if (user.email) { %> <%= user.email %> <% } else if
                (user.phone) { %> <%= user.phone ? '+95' + user.phone.slice(1) :
                '' %> <% } else { %> No contact info available. <% } %>
              </p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <button
            onclick="window.location.href='/auth/logout'"
            class="w-full px-6 py-3 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white rounded-lg hover:from-yellow-600 hover:to-yellow-700 hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-medium"
          >
            <i data-lucide="log-out" class="h-4 w-4 mr-2 inline"></i>
            Yes, Logout
          </button>
          <button
            onclick="window.location.href='/user/profile'"
            class="w-full px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium"
          >
            <i data-lucide="arrow-left" class="h-4 w-4 mr-2 inline"></i>
            Cancel
          </button>
        </div>

        <!-- Additional Options -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <p class="text-sm text-gray-600 mb-3">Before you go:</p>
          <div class="space-y-2">
            <button
              onclick="window.location.href='/user/profile'"
              class="text-primary-600 hover:text-primary-700 text-sm font-medium transition-colors block mx-auto"
            >
              <i data-lucide="user" class="h-4 w-4 mr-1 inline"></i>
              View Profile
            </button>
            <button
              onclick="window.location.href='#'"
              class="text-primary-600 hover:text-primary-700 text-sm font-medium transition-colors block mx-auto"
            >
              <i data-lucide="history" class="h-4 w-4 mr-1 inline"></i>
              Check History
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Logout Processing Modal -->
<div
  id="logoutModal"
  class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4"
>
  <div class="bg-white rounded-2xl shadow-2xl max-w-sm w-full">
    <div class="px-6 py-8 text-center">
      <div
        class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
      >
        <i
          data-lucide="loader-2"
          class="h-8 w-8 text-primary-600 animate-spin"
        ></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Logging out...</h3>
      <p class="text-gray-600 text-sm">
        Please wait while we securely log you out
      </p>

      <!-- Progress Bar -->
      <div class="mt-4">
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div
            id="progressBar"
            class="h-2 bg-primary-600 rounded-full transition-all duration-300"
            style="width: 0%"
          ></div>
        </div>
      </div>
    </div>
  </div>
</div>
